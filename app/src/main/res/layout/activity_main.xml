<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="dgsw.hs.kr.flow.Activity.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btn_next_meal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="74dp"
        android:background="@color/colorAccent"
        android:text="다음 급식 조회"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_choice_meal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_title1" />

    <Button
        android:id="@+id/btn_choice_meal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="74dp"
        android:background="@color/colorAccent"
        android:text="원하는 날짜의 급식 조회"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_main_title2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_next_meal" />

    <TextView
        android:id="@+id/tv_main_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif"
        android:text="급 식"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_next_meal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:fontFamily="sans-serif"
        android:text="외출 / 외박"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_request_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choice_meal" />

    <Button
        android:id="@+id/btn_request_out"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="74dp"
        android:background="@color/colorAccent"
        android:text="외출 / 외박 신청"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_out_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_title2" />

    <TextView
        android:id="@+id/tv_main_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif"
        android:text="공 지 사 항"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_get_notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_out_list" />

    <Button
        android:id="@+id/btn_out_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="74dp"
        android:background="@color/colorAccent"
        android:text="신청한 외출 목록 보기"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_main_title3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_request_out" />

    <Button
        android:id="@+id/btn_get_notice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="74dp"
        android:background="@color/colorAccent"
        android:text="공지사항 확인"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_title3" />


</android.support.constraint.ConstraintLayout>
